root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 80
tab_width = 4

[*.dart]
max_line_length = 120

[*.py]
max_line_length = 120

[{*.apinotes,*.yaml,*.yml,.clang-format,.clang-tidy,_clang-format}]
indent_size = 2

[{*.arb,*.har,*.json,*.jsonc}]
indent_size = 2

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[{*.md,*.txt}]
indent_size = 2
tab_width = 2

[*.md]
max_line_length = 100

[{*.cc,*.cpp,*.c,*.h,*.hpp}]
indent_size = 2
tab_width = 2

